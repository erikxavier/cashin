<Window x:Class="CashIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CashIn" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <Menu Height="20" VerticalAlignment="Top" DockPanel.Dock="Top">
                <MenuItem Header="Serviços">
                    <MenuItem Header="Orçamentos">
                        <MenuItem Header="Novo" Click="tabCadOrcamento"/>
                    </MenuItem>
                    <MenuItem Header="Projetos" />
                </MenuItem>
                <MenuItem Header="Cadastros">
                    <MenuItem Header="Pessoas" Click="tabCadPessoa"/>
                    <MenuItem Header="Clientes" />
                    <MenuItem Header="Parceiros" />
                    <MenuItem Header="Usuarios" />
                    <MenuItem Header="Serviços Padrão" />
                </MenuItem>
                <MenuItem Header="Financeiro">
                    <MenuItem Header="Balanço" />
                    <MenuItem Header="Notas" />
                    <MenuItem Header="Movimentos" />
                </MenuItem>
            </Menu>
            <TabControl Height="auto" Width="auto" Name="tabControl1" DockPanel.Dock="Top"></TabControl>
        </DockPanel>
    </Grid>
</Window>
