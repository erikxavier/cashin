        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Usuário:" Height="28" HorizontalAlignment="Left" Margin="42,86,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Senha:" Height="28" HorizontalAlignment="Left" Margin="42,118,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="101,86,0,0" Name="tbUser" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="101,118,0,0" Name="tbPass" VerticalAlignment="Top" Width="120" />
        <Button Content="Entrar" Height="23" HorizontalAlignment="Left" Margin="146,179,0,0" Name="btLogin" VerticalAlignment="Top" Width="75" Click="btLogin_Click" />
    </Grid>
</Window>
